<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingStart="@dimen/dp_20"
    android:paddingEnd="@dimen/dp_20"
    android:background="@color/white"
    tools:context="com.app.driver.fragments.FaqFragment">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_32"
                android:id="@+id/logo">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/single"
                    android:id="@+id/logo_image"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/grey_text_color"
                    android:text="@string/app_name"
                    android:id="@+id/app_name"
                    android:layout_toEndOf="@+id/logo_image"
                    android:layout_marginStart="@dimen/dp_10"
                    android:textAllCaps="true"
                    android:layout_marginTop="10dp"
                    android:letterSpacing="0.05"
                    android:textStyle="bold"
                    android:textSize="24dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/grey_text_color"
                    android:text="@string/txt_book_a_pick_up"
                    android:textSize="14dp"
                    android:layout_below="@+id/app_name"
                    android:layout_toEndOf="@+id/logo_image"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:id="@+id/header_container"
                android:background="@color/grey_light"
                android:layout_below="@+id/logo"
                android:layout_marginTop="@dimen/dp_26"
                android:paddingStart="@dimen/dp_8"
                android:paddingEnd="@dimen/dp_8">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/txt1"
                    android:textSize="@dimen/medium_text"
                    android:gravity="center_vertical"
                    android:text="Pickup and fare Review"
                    android:textColor="@color/grey_text_color"
                    android:layout_alignParentStart="true"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:id="@+id/img1"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/right_arrow"/>

            </RelativeLayout>
           
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:id="@+id/container2"
                android:layout_below="@+id/header_container"
                android:background="@color/grey_light"
                android:layout_marginTop="@dimen/dp_15"
                android:paddingStart="@dimen/dp_8"
                android:paddingEnd="@dimen/dp_8">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/txt2"
                    android:textSize="@dimen/medium_text"
                    android:gravity="center_vertical"
                    android:text="Pickup and fare Review"
                    android:textColor="@color/grey_text_color"
                    android:layout_alignParentStart="true"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:id="@+id/img2"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/right_arrow"/>

            </RelativeLayout>
           

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:id="@+id/container3"

                android:layout_below="@+id/container2"
                android:background="@color/grey_light"
                android:layout_marginTop="@dimen/dp_15"
                android:paddingStart="@dimen/dp_8"
                android:paddingEnd="@dimen/dp_8">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/txt3"
                    android:textSize="@dimen/medium_text"
                    android:gravity="center_vertical"
                    android:text="Pickup and fare Review"
                    android:textColor="@color/grey_text_color"
                    android:layout_alignParentStart="true"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:id="@+id/img3"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/right_arrow"/>

            </RelativeLayout>
            
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:id="@+id/container4"
                android:layout_below="@+id/container3"
                android:background="@color/grey_light"
                android:layout_marginTop="@dimen/dp_15"
                android:paddingStart="@dimen/dp_8"
                android:paddingEnd="@dimen/dp_8">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/txt4"
                    android:textSize="@dimen/medium_text"
                    android:gravity="center_vertical"
                    android:text="Pickup and fare Review"
                    android:textColor="@color/grey_text_color"
                    android:layout_alignParentStart="true"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:id="@+id/img4"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/right_arrow"/>

            </RelativeLayout>
            


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:id="@+id/container5"
                android:layout_below="@+id/container4"
                android:background="@color/grey_light"
                android:layout_marginTop="@dimen/dp_15"
                android:paddingStart="@dimen/dp_8"
                android:paddingEnd="@dimen/dp_8">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/txt5"
                    android:textSize="@dimen/medium_text"
                    android:gravity="center_vertical"
                    android:text="Pickup and fare Review"
                    android:textColor="@color/grey_text_color"
                    android:layout_alignParentStart="true"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/img5"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/right_arrow"/>

            </RelativeLayout>
         
        </RelativeLayout>

</RelativeLayout>

