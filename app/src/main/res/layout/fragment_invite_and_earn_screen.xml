<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.app.driver.fragments.InviteAndEarnScreen">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200"
        android:id="@+id/header_container"
        android:background="@color/appcolor">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_180"
            android:src="@drawable/invite_earn"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="-10dp"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/earn_txt_1"
        android:layout_below="@+id/header_container"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginStart="@dimen/dp_30"
        android:textStyle="bold"
        android:textSize="@dimen/medium_text"
        android:layout_marginEnd="@dimen/dp_20"
        android:textColor="@color/grey_text_color"
        android:text="@string/txt_earn_credits"
        android:gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/earn_txt_1"
        android:id="@+id/txt_your_bank"
        android:layout_marginStart="@dimen/dp_30"
        android:textStyle="bold"
        android:textSize="@dimen/medium_text"
        android:layout_marginEnd="@dimen/dp_20"
        android:textColor="@color/grey_text_color"
        android:text="@string/txt_your_bank"
        android:gravity="center"/>


    <ImageView
            android:layout_below="@+id/txt_your_bank"
            android:layout_width="@dimen/dp_40"
        android:id="@+id/img_share"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_centerInParent="true"
            android:src="@drawable/share"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_share"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginStart="@dimen/dp_30"
        android:textSize="@dimen/medium_text"
        android:layout_marginEnd="@dimen/dp_20"
        android:id="@+id/txt_reffral_code"
        android:textColor="@color/grey_text_color"
        android:text="@string/txt_refrel_code"
        android:gravity="center"/>

    <RelativeLayout
        android:layout_width="@dimen/dp_130"
        android:layout_height="@dimen/dp_40"
        android:layout_centerInParent="true"
        android:elevation="5dp"
        android:layout_below="@+id/txt_reffral_code"
        android:layout_marginTop="@dimen/dp_15">
   <TextView
        android:layout_width="@dimen/dp_80"
        android:layout_height="match_parent"
        android:id="@+id/txt_code"
        android:textSize="@dimen/small_text"
        android:text="GUJ895J"
        android:gravity="center"/>
        <View
            android:layout_width="@dimen/dp_0.5"
            android:layout_height="match_parent"
            android:id="@+id/devider"

            android:background="@color/greyColor"
            android:layout_toEndOf="@+id/txt_code"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toEndOf="@+id/devider">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:src="@drawable/attachment"
                android:text="GUJ895J"
                android:gravity="center"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:layout_alignParentBottom="true"
            android:background="@color/greyColor"
            />


    </RelativeLayout>





</RelativeLayout>
