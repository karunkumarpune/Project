                                android:layout_centerHorizontal="true">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/medium_text"
                                    android:id="@+id/txt_dhz3"
                                    android:text="7"
                                    android:textStyle="bold"
                                    android:textColor="@color/grey_text_color"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/small_text"
                                    android:layout_toEndOf="@+id/txt_dhz"
                                    android:layout_marginStart="@dimen/dp_5"
                                    android:text="DHZ"
                                    android:textColor="@color/grey_text_color"/>
                            </LinearLayout>


                            <RelativeLayout
                                android:layout_width="@dimen/dp_60"
                                android:layout_height="@dimen/dp_60"
                                android:layout_centerInParent="true"
                                android:background="@drawable/silver_circle">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:textSize="@dimen/medium_text"
                                    android:layout_marginTop="@dimen/dp_10"
                                    android:id="@+id/txt_medal_count2"
                                    android:text="50-99"
                                    android:textStyle="bold"
                                    android:textColor="@color/white"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/txt_medal_count2"
                                    android:layout_centerHorizontal="true"
                                    android:textSize="@dimen/small_text"
                                    android:text="Person"

                                    android:textColor="@color/white"/>


                            </RelativeLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/small_text"
                                android:id="@+id/txt_per_booking2"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginBottom="@dimen/dp_20"
                                android:text="Per Booking"

                                android:textColor="@color/grey_text_color"/>
                        </RelativeLayout>
                    </RelativeLayout>

                </android.support.v7.widget.CardView>

            </RelativeLayout>
            <android.support.v7.widget.CardView
                android:layout_width="@dimen/dp_80"
                android:id="@+id/card_silver"
                android:padding="@dimen/dp_5"

                android:layout_centerHorizontal="true"
                app:cardBackgroundColor="@color/silver"
                android:layout_height="@dimen/dp_20"
                app:cardCornerRadius="@dimen/dp_5">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:id="@+id/txt_silver_bottom"
                    android:textColor="@color/white"
                    android:textSize="@dimen/small_text"
                    android:text="Bronze"/>
            </android.support.v7.widget.CardView>
        </RelativeLayout>



    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clipToPadding="false">
                <android.support.v7.widget.CardView
