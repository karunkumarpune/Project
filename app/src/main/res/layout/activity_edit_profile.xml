<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.app.bickup_user.fragments.LoginFragment">
    <include layout="@layout/toolbar_layout"
        android:id="@+id/toobar_layout"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toobar_layout">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="18dp"
            android:paddingEnd="18dp"
            android:id="@+id/container_signup"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/id_image_container"
                android:layout_width="@dimen/dp_110"
                android:layout_height="@dimen/dp_100"
                android:layout_marginTop="25dp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:visibility="visible"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <com.makeramen.roundedimageview.RoundedImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/driver"
                    android:scaleType="centerCrop"
                    app:riv_oval="true"
                    android:id="@+id/userImage" />
                </RelativeLayout>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/add_photo"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:layout_alignParentBottom="true" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/id_image_container"
                android:visibility="visible"
                android:orientation="vertical">
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/text_enter_first_name"
                    android:layout_width="match_parent"
                    app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout"
                    android:layout_below="@+id/tv_forgot_heading"
                    android:layout_marginTop="32dp"
                    android:layout_height="wrap_content">
                    <EditText
                        android:textSize="@dimen/medium_text"
                        android:id="@+id/edt_first_name"
                        android:layout_width="match_parent"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:inputType="text"
                        android:textCursorDrawable="@null"
                        android:textColor="@color/grey_text_color"
                        android:layout_height="wrap_content"
                        android:paddingTop="0dp"
                        android:paddingBottom="12dp"
                        android:backgroundTint="@color/greyColor"
                        android:hint="@string/txt_full_name1"
                        />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/text_enter_last_name"
                    android:layout_width="match_parent"
                    app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout"
                    android:layout_below="@+id/tv_forgot_heading"
                    android:layout_height="wrap_content">
                    <EditText
                        android:textSize="@dimen/medium_text"
                        android:id="@+id/edt_last_name"
                        android:layout_width="match_parent"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:inputType="text"
                        android:textCursorDrawable="@null"
                        android:textColor="@color/grey_text_color"
                        android:layout_height="wrap_content"
                        android:paddingTop="0dp"
                        android:paddingBottom="12dp"
                        android:backgroundTint="@color/greyColor"
                        android:hint="@string/txt_full_name2"
                        />
                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/text_last_name_signup"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/tv_forgot_heading"
                    app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/edt_mobile_number_profile"
                        android:textSize="@dimen/medium_text"
                        android:maxLines="1"
                        android:inputType="number"
                        android:enabled="false"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/grey_text_color"
                        android:textCursorDrawable="@null"
                        android:backgroundTint="@color/greyColor"
                        android:paddingTop="0dp"
                        android:paddingBottom="12dp"
                        android:hint="@string/mobile_number" />
                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/text_enter_emailID_signup"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"

                    app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout"
                    android:layout_below="@+id/tv_forgot_heading"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/edt_email_profile"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:inputType="text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textCursorDrawable="@null"
                        android:textColor="@color/grey_text_color"
                        android:backgroundTint="@color/greyColor"
                        android:textSize="@dimen/medium_text"
                        android:paddingTop="0dp"
                        android:paddingBottom="12dp"
                        android:hint="@string/txt_email"
                        />
                </android.support.design.widget.TextInputLayout>

                <Button
                    android:id="@+id/btn_save_profile"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/btn_height"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="-4dp"
                    android:layout_marginEnd="-4dp"
                    android:paddingBottom="@dimen/btn_padding_bottom"
                    android:textAllCaps="false"
                    android:stateListAnimator="@null"
                    android:text="@string/txt_save"
                    style="@style/btn_style"
                    android:layout_below="@+id/text_enter_mobile"/>
            </LinearLayout>

        </RelativeLayout>

    </ScrollView>
    <com.github.rahatarmanahmed.cpv.CircularProgressView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/progress_view"
        android:layout_width="@dimen/dp_50"
        android:layout_centerInParent="true"
        android:layout_height="@dimen/dp_50"
        android:visibility="gone"
        app:cpv_animAutostart="true"
        app:cpv_indeterminate="true"
        app:cpv_color="@color/appcolor"/>
</RelativeLayout>
